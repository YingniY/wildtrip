  <thead>
    <tr>
      <th>Activity</th>
      <th>Duration</th>
      <th>Trip</th>
      <th>Country</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <body>
    <% @idea.random do |idea| %>
      <tr>
        <td><%= idea.activity %></td>
        <td><%= idea.duration %></td>
        <td><%= idea.trip %></td>
        <td><%= idea.country %></td>
        <td><%= idea.cost %></td>
  
      </tr>
    <% end %>
  </body>
</table>


